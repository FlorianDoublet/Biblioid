<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="flq.projectbooks" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateBook"
            android:label="@string/title_activity_create_book"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".DisplayBooks"
            android:label="@string/title_activity_display_books">
        </activity>
        <activity
            android:name=".DisplayFilters"
            android:label="@string/title_activity_display_filters" >
        </activity>
        <activity
            android:name=".CreateFilter"
            android:label="@string/title_activity_create_filter"
            android:windowSoftInputMode="adjustResize" >
        </activity>
    </application>

</manifest>
