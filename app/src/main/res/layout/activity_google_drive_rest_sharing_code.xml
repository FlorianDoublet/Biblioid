<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UI.activities.GoogleDriveRestSharingCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SharingOutputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:text="Ce code vous permet de partager votre bibliothèque avec vos amis :"/>

        <TextView
            android:id="@+id/SharingCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textIsSelectable="true"
            tools:text="0BzniG5FyrACBeDYyN0d4M1VlOEU"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/SharingInformationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:visibility="gone"
            android:text="Grâce a ce code, vos amis pourront lire votre bibliothèque et ainsi avoir disposition, sur leur appareil tout vos livres ainsi que les informations que vous leur avez donner. N'ayez crainte, ils n'auront pas le droit d'écriture sur votre bilibothèque."/>

    </LinearLayout>


</RelativeLayout>
