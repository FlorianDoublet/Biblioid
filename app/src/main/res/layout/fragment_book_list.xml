<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.fragments.BookList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridViewBooks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="0dp"
            android:numColumns="2"
            android:padding="0dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp"
            android:layout_weight="9"></GridView>

        <LinearLayout
            android:id="@+id/gridzoomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layoutZoomMinusGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/zoomminus"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutZoomPlusGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/zoomplus"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
