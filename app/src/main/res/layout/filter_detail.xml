<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

                <LinearLayout
                    android:id="@+id/booksIconDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false">
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:background="#55000000"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false">



                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical|end"
                        android:shadowColor="#000000"
                        android:shadowRadius="7"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:textColor="@color/white"
                        tools:text="Nom du filtre"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nbLivre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:paddingTop="30dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:textSize="13sp"
                            android:textStyle="italic|bold"
                            tools:text="30 livre(s) +"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/nbLivreFriend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            tools:text="15 livre(s) d'ami"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />


                    </LinearLayout>
                </LinearLayout>

            <ImageView
                android:id="@+id/filterBelongToFriendIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/friendicon"/>

        </RelativeLayout>

</LinearLayout>
