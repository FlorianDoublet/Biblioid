<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openCreateBookActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:adjustViewBounds="true"
                        android:paddingTop="3dp"
                        android:src="@drawable/book" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/openCreateBookButton"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openDisplayBookActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:adjustViewBounds="true"
                        android:paddingTop="3dp"
                        android:src="@drawable/library" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/openBookListButton"
                        android:textColor="@android:color/white" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openDisplayFilterActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/filter" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/bookfilterListButton"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openScannerActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/barcode" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/scan"
                        android:textColor="@android:color/white" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openImportExportActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/importexport" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/importExport"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openCreateFriendActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/friend" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/addFriend"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openOptionActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/option" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/option"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="openInformationActivity"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/info" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CC000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/Info"
                        android:textColor="@android:color/white" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
